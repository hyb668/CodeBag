<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xui="http://schemas.android.com/apk/res/com.codebag"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.codebag.code.mycode.xui.progress.XuiCircularProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xui:stroke_width="5dp"
        xui:progress="0.5"
        xui:thumb_visible="true"
        xui:progress_radius="144dp"/>

</LinearLayout>